{
  "name": "bot-nutri",
  "version": "1.0.0",
  "description": "API de nutrição usando Bun + Elysia com Clean Architecture",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "seed:paco": "bun run src/scripts/seed-paco.ts",
    "validate:taco": "bun run src/scripts/validate-taco-integration.ts",
    "check:paco": "bun run src/scripts/check-paco-repository.ts",
    "test:mongodb": "bun run src/scripts/test-mongodb-connection.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build"
  },
  "keywords": [
    "bun",
    "elysia",
    "clean-architecture",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/swagger": "^1.1.1",
    "@google/generative-ai": "^0.24.1",
    "@hapi/boom": "^10.0.1",
    "@sinclair/typebox": "^0.34.41",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "canvas": "^3.2.0",
    "chartjs-node-canvas": "^5.0.0",
    "elysia": "^1.4.16",
    "mongodb": "^6.21.0",
    "pino": "^8.17.2",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "pino-pretty": "^13.1.2",
    "typescript": "^5.4.5"
  }
}
